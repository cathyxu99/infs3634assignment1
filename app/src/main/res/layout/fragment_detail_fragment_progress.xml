<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#40FFFFFF"
    android:orientation="vertical"
    tools:context=".ProgressPage.DetailFragmentProgress"
    >

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25" />

    <TextView
        android:id="@+id/levelName"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight=".3"
        android:fontFamily="@font/roboto_medium"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="30sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".1" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight=".25"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center"
        android:text="Last Completed On"
        android:textColor="#000000"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/cDate"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".25"
        android:fontFamily="@font/roboto"
        android:gravity="center_horizontal"
        android:text="N/A"
        android:textSize="24sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".1" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight=".25"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center"
        android:text="Fastest Time"
        android:textColor="#000000"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight=".25"
        android:height="0dp"
        android:fontFamily="@font/roboto"
        android:text="N/A"
        android:textSize="24sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".1" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="154dp"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight=".2"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center"
        android:text="Badge Status"
        android:textColor="#000000"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/badgeText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight=".2"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center"
        android:text="N/A"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Space
            android:layout_width="103dp"
            android:layout_height="match_parent"
            android:layout_weight=".25" />

        <ImageView
            android:id="@+id/trophyImage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:src="@drawable/badge" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="33dp" />

    <Button
        android:id="@+id/backProgress"
        android:layout_width="228dp"
        android:layout_height="32dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/normal_button"
        android:fontFamily="@font/roboto"
        android:text="Back to Progress List"
        android:textColor="#FFFFFFFF" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".1" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>