<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/quizbg"
    android:backgroundTint="#E6FFFFFF"
    android:backgroundTintMode="src_over">


    <Button
        android:id="@+id/falseButton"
        android:layout_width="332dp"
        android:layout_height="100dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/solid_line_button"
        android:fontFamily="@font/roboto_medium"
        android:text="False"
        android:textColor="#76b4bd"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/trueButton"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/trueButton"
        app:layout_constraintTop_toBottomOf="@+id/trueButton"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/mcqQuestion"
        android:layout_width="338dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:text="Question should be displayed."
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/trueButton"
        android:layout_width="332dp"
        android:layout_height="100dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/solid_line_button"
        android:fontFamily="@font/roboto_medium"
        android:text="True"
        android:textColor="#76b4bd"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="@+id/mcqQuestion"
        app:layout_constraintStart_toStartOf="@+id/mcqQuestion"
        app:layout_constraintTop_toBottomOf="@+id/mcqQuestion" />

    <TextView
        android:id="@+id/tfNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/roboto"
        android:text="Q0"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>